extends ..\\templates\\layout

block header
    | Powder Game

block content
    #innerWrapper.flex
        article#controls.col
            button#start Start
            button#stop Stop
            button#tick Tick
            button#reset Reset

            button#makeFloor Make Floor
            button#removeFloor Remove Floor

        article#gameArea.col
            canvas(name="game")#game.game Please use a canvas enabled browser.

        article#information.col
            p This is a powder game.
            p It includes falling powder.

block scripts
    script.
            window.Globals = {
                width: { x: 128, y: 128 },
                scale: 1,
                heightOffset: 100, 
                canvas: 'game',
                running: false,
                molecules: {
                    Particle: 0,
                    Empty: 1,
                    Block: 100,
                    Powder: 200,
                    Sand: 201,
                    Snow: 202, 
                    Oil: 203, 
                    Salt: 204, 
                    Water: 205
                }
            }
    script(src='/lib/jquery.js')
    script(src='/dist/app.js')
