extends ..\\templates\\layout

block header
    | Powder Game

block content
    #innerWrapper.flex
        article#controls.col
            button#start Start
            button#stop Stop
            button#tick Tick
            button#reset Reset

            button#makeFloor Make Floor
            button#removeFloor Remove Floor

            button#startGenerate Start Generate
            button#stopGenerate Stop Generate

            form(method="get" action="/" id="sizes")
                label(for="sizesx")= "X Size: "
                input(type="number" min="100" max="1000" step="1" id="sizesx" class="setSizes" name="x" required)
                label(for="sizesy")= "Y Size: "
                input(type="number" min="100" max="1000" step="1" id="sizesy" class="setSizes" name="y" required)
                input(type="submit" value="Submit" id="sizessubmit" name="submit")
                input(type="reset" value="Reset" id="sizesreset" name="reset")

            input(type="number" min="1" step="1" id="typest" class="setTypes" name="t")
            input(type="number" min="1" step="1" id="typesr" class="setTypes" name="r")
            button(type="button" id="typesButton" name="typesButton") Set Type

        article(name="gameArea")#gameArea.col
            canvas(name="game")#game.game Please use a canvas enabled browser.

        article#information.col
            p This is a game about falling powder. Powder falls or can be created. 

block scripts
    script.
            window.Globals = {
                width: { x: 300, y: 300 },
                scale: 1,
                sizeOffset: 100, 
                tick: false,
                ids: {
                    canvas: 'game',
                    container: 'gameArea',
                    innerWrapper: 'innerWrapper',
                    start: 'start',
                    stop: 'stop',
                    tick: 'tick',
                    reset: 'reset',
                    makeFloor: 'makeFloor',
                    removeFloor: 'removeFloor',
                    startGenerate: 'startGenerate',
                    stopGenerate: 'stopGenerate',
                    sizesForm: 'sizes',
                    typesButton: 'typesButton',
                    types: 'typest',
                    typesRadius: 'typesr'
                },
                running: false,
                molecules: {
                    Particle: 1,
                    Empty: 2,
                    Block: 100,
                    Powder: 200,
                    Sand: 201,
                    Snow: 202, 
                    Salt: 204, 
                    Sage: 205,
                    Liquid: 300,
                    Oil: 301, 
                    Water: 302
                },
                spawning: {
                    radius: 2, 
                    type: 100
                },
                queryNames: {
                    xSize: 'x', 
                    ySize: 'y', 
                    type: 't',
                    radius: 'r'
                }
            }
    script(src='/lib/jquery.js')
    script(src='/dist/app.js')
