doctype html
html
    head
        title Powder Game

        meta(name='viewport', content='width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0.0, minimal-ui')
        meta(name='msapplication-TileColor', content='#000000')
        meta(name='theme-color', content='#000000')
        meta(charset='UTF-8')

        link(rel='stylesheet', type='text/css', href='/css/style.css')
        link(rel='icon', href='/img/faviconSmall.ico', type='image/x-icon')
    body
        block header
            header.header
                h1 Powder Game
                a(href='/about', target='_blank') About
        block content

        //- Automatic page reload and fps counter in development
        if development
            script(src='/reload/reload.js')
            script(src='/js/lib/fpsmeter.js')

            script.
                var development = #{development ? 'true' : 'false'}
                var meter = new FPSMeter({
                    theme: 'dark',
                    graph: 1,
                    history: 20,

                    top: '5px',
                    right: '5px',
                    left: 'auto',
                    bottom: 'auto'
                })

        block scripts
        	